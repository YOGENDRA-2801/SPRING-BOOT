package in.yoy.standaloneprojectdemo.main;

import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;

@SpringBootApplication // it is an entry point of our application which combination of 3 annotation @Component , @ComponentScan and @EnableAutoConfiguration that provides provides setup and configurations for our spring boot application
public class StandaloneProjectDemoApplication {

	public static void main(String[] args) {
		
		SpringApplication.run(StandaloneProjectDemoApplication.class, args);
//		It is a static method. Whatever tasks are required for our application to execute, it performs all those tasks.
//		Task examples :- Initialize Spring Application , Configure Application Context , Load external configurations , load & register bean , apply auto configuration , start server (if required) , etc
		
		System.out.println("Application Finished");
	}

}